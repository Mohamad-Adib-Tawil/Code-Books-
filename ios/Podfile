# Uncomment this line to define a global platform for your project
platform :ios, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

install! 'cocoapods', :disable_input_output_paths => true

# Try to load the local podhelper (generated by Flutter). If missing, fall back to SDK copy.
begin
  require File.expand_path(File.join('..', 'Flutter', 'podhelper.rb'), __FILE__)
rescue LoadError
  flutter_bin = `which flutter`.strip
  if flutter_bin && !flutter_bin.empty?
    flutter_root = File.expand_path('..', File.dirname(flutter_bin))
    helper_path = File.expand_path(File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb'))
    require helper_path
  else
    raise 'Flutter SDK not found in PATH, and ios/Flutter/podhelper.rb is missing.'
  end
end

flutter_ios_podfile_setup

target 'Runner' do
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Ensure minimum deployment target aligns
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
    end
  end
end
